<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
    </style>

    <style name="AppTheme.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
    </style>

    <style name="AppTheme.Main" parent="@style/AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Predict</item>
    </style>

    <style name="ActionBar.Solid.Predict" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">showTitle|showHome</item>
    </style>

    <style name="AppTheme.WithActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
    </style>
    <style name="AppTheme.NewPredictionActivity" parent="@style/AppTheme.WithActionBar">
        <item name="android:homeAsUpIndicator">@drawable/ic_clear_white_24dp</item>
    </style>

</resources>
